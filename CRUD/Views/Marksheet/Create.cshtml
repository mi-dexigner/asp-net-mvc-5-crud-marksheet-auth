
@{
    ViewBag.Title = "Create";
}

<h2>Marksheet Create</h2>

<form action="~/Marksheet/Create" method="post">
    <div class="form-group">
        <label for="FirstName">First Name</label>
        <input type="text" class="form-control" id="FirstName" name="FirstName" placeholder="First Name">
    </div>
    <div class="form-group">
        <label for="LastName">Last Name</label>
        <input type="text" class="form-control" id="LastName" name="LastName" placeholder="Last Name">
    </div>
    <div class="form-group">
        <label for="EnglishMark">English Mark</label>
        <input type="number" class="form-control" id="EnglishMark" name="EnglishMark" placeholder="English Mark" min="1">
    </div>
    <div class="form-group">
        <label for="MathMark">Math Mark</label>
        <input type="number" class="form-control" id="MathMark" name="MathMark" placeholder="Math Mark" min="1">
    </div>

    <div class="form-group">
        <label for="UrduMark">Urdu Mark</label>
        <input type="number" class="form-control" id="UrduMark" name="UrduMark" placeholder="Urdu Mark" min="1">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>